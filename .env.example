# Database - PostgreSQL connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/lma_loans?schema=public"

# AI - Anthropic Claude API (for document parsing)
ANTHROPIC_API_KEY=

# NEL Protocol (Nammu21) - GraphQL API
NEL_GRAPHQL_ENDPOINT=https://api.nammu21.com/graphql
NEL_API_KEY=

# =============================================================================
# INVISIBLE CRYPTO CONFIGURATION
# =============================================================================

# Blockchain Mode - 'mock' for demo, 'real' for on-chain transactions
NEXT_PUBLIC_BLOCKCHAIN_MODE=mock

# Privy - Authentication & Embedded Wallets (https://privy.io)
# Get your app ID from the Privy Dashboard
NEXT_PUBLIC_PRIVY_APP_ID=

# Pimlico - Account Abstraction (ERC-4337) Bundler & Paymaster
# Get your API key from https://dashboard.pimlico.io
NEXT_PUBLIC_PIMLICO_API_KEY=

# Target Chain - 'baseSepolia' for testnet, 'base' for mainnet
NEXT_PUBLIC_CHAIN=baseSepolia

# Base Sepolia RPC URL (default: https://sepolia.base.org)
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Base Mainnet RPC URL (default: https://mainnet.base.org)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================

# Localhost (Hardhat) - populated after running npm run chain:deploy
NEXT_PUBLIC_FACTORY_ADDRESS=
NEXT_PUBLIC_CLAIM_TOPICS_REGISTRY=
NEXT_PUBLIC_TRUSTED_ISSUERS_REGISTRY=

# Base Sepolia - populated after deploying to testnet
NEXT_PUBLIC_FACTORY_ADDRESS_BASE_SEPOLIA=
NEXT_PUBLIC_CLAIM_TOPICS_REGISTRY_BASE_SEPOLIA=
NEXT_PUBLIC_TRUSTED_ISSUERS_REGISTRY_BASE_SEPOLIA=

# Base Mainnet - populated after deploying to mainnet
NEXT_PUBLIC_FACTORY_ADDRESS_BASE=
NEXT_PUBLIC_CLAIM_TOPICS_REGISTRY_BASE=
NEXT_PUBLIC_TRUSTED_ISSUERS_REGISTRY_BASE=

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Private key for contract deployment (DO NOT commit real keys!)
PRIVATE_KEY=

# RPC URLs for deployment
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
SEPOLIA_RPC_URL=
POLYGON_RPC_URL=
